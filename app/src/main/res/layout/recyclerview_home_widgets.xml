<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".Activities.HomeActivity" android:orientation="vertical">

    <ImageView
            android:layout_width="149dp"
            android:layout_height="162dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/home_image" android:layout_weight="1" android:foregroundGravity="center"
            android:visibility="visible" android:layout_gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="149dp"
            android:layout_height="56dp" android:id="@+id/home_text"
            android:gravity="center" android:textSize="14sp"
            android:textColor="#979797" android:foregroundGravity="center"
            android:visibility="visible" android:textStyle="bold"/>
</LinearLayout>