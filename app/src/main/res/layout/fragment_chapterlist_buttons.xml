<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context=".Activities.fragments.ChapterlistButtonsFragment"
       android:id="@+id/frameLayout">


    <Button
            android:text="Download"
            android:backgroundTint="@color/teal_700"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:id="@+id/downloadButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976"
            app:layout_constraintHorizontal_bias="0.494"
            app:iconTint="#000000"
            app:rippleColor="#000000"
            android:visibility="visible" android:alpha="0.75"
    />
    <Button
            android:text="Read/Unread"
            android:backgroundTint="@color/teal_700"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:id="@+id/readUnreadButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.985"
            app:layout_constraintHorizontal_bias="0.494"
            app:iconTint="#8A1212"
            app:rippleColor="#000000" android:visibility="visible" android:alpha="0.75"
            app:layout_constraintBottom_toTopOf="@+id/downloadButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>