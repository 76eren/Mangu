<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp" android:orientation="vertical">

    <ImageView
            android:layout_width="411dp"
            android:layout_height="35dp" app:srcCompat="@drawable/star_colored"
            android:id="@+id/imageViewStar" android:layout_weight="1" android:foregroundGravity="left"
            android:layout_gravity="left"
            android:paddingRight="360dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="207dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imageViewPoster" android:layout_weight="1" android:foregroundGravity="center"
            android:visibility="visible" android:layout_gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv" android:layout_weight="1"
            android:gravity="center_horizontal" android:foregroundGravity="center" android:visibility="visible"
            android:layout_gravity="center"/>
    <Button
            android:text="Button"
            android:layout_width="411dp"
            android:layout_height="60dp" android:id="@+id/btn" android:layout_weight="1"
            android:visibility="visible" android:foregroundGravity="center" android:layout_gravity="center"
            android:paddingLeft="0dp" android:paddingTop="1dp" android:paddingRight="0dp" android:paddingEnd="0dp"
            android:paddingStart="0dp" android:paddingBottom="0dp" android:paddingHorizontal="0dp"
            android:paddingVertical="0dp" android:padding="0dp" android:layout_margin="1dp"
            android:layout_marginHorizontal="1dp" android:layout_marginStart="1dp" android:layout_marginVertical="1dp"
            android:layout_marginTop="1dp" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp" android:layout_marginEnd="1dp" app:rippleColor="#FF0000"
            android:background="#FFFFFF" android:backgroundTint="#126CCC"/>
</LinearLayout>