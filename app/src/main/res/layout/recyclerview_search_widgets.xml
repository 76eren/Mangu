<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:id="@+id/card_favs"
            android:visibility="visible">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/card_favs_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="0dp"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp"
            />

            <TextView
                    android:id="@+id/card_favs_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="28dp"
                    android:layout_toEndOf="@+id/card_favs_image"
                    android:drawablePadding="2dp"
                    android:textColor="#979797" android:tag="bn" android:textStyle="bold" android:gravity="center"
                    android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>


