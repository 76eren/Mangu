<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ReadActivity">

    <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:layout_width="20dp"
            android:layout_height="850dp" android:id="@+id/prevPage"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:visibility="visible"
            android:background="@null"

            app:rippleColor="@android:color/transparent" android:shadowColor="@android:color/transparent"
            app:strokeColor="@android:color/transparent" android:textColor="@android:color/transparent"
            android:textColorHighlight="@android:color/transparent" android:textColorHint="@android:color/transparent"
            android:textColorLink="@android:color/transparent"/>
    <Button
            android:layout_width="24dp"
            android:layout_height="832dp" android:id="@+id/nextPage"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
            android:background="@null"
            android:visibility="visible" android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/transparent" android:textColorLink="@android:color/transparent"
            android:textColor="@android:color/transparent" app:strokeColor="@android:color/transparent"
            android:shadowColor="@android:color/transparent" app:rippleColor="@android:color/transparent"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="29dp" android:id="@+id/progress"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.977"
            android:foregroundGravity="center" android:gravity="center" android:textColor="#FF0000"/>


</androidx.constraintlayout.widget.ConstraintLayout>