<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ChaptersActivity">
    <TextView
            android:layout_width="362dp"
            android:layout_height="216dp" android:id="@+id/status" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" android:textSize="30sp" app:layout_constraintVertical_bias="0.56"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView2" tools:layout_editor_absoluteY="-85dp"
            tools:layout_editor_absoluteX="-1dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/llayout">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="249dp" app:srcCompat="@drawable/ic_launcher_background"
                    android:id="@+id/cover" android:layout_marginVertical="10dp"/>
            <TextView
                    android:layout_width="372dp"
                    android:layout_height="167dp"
                    android:id="@+id/story"
                    android:fadeScrollbars="false"
                    android:isScrollContainer="false"
                    android:verticalScrollbarPosition="defaultPosition"
                    android:layout_margin="20dp" android:nestedScrollingEnabled="false" android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>